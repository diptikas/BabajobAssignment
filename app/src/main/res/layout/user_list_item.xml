<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_margin="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">



        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/user_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="ID -  #123"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Name - Diptika  Shukla"
                android:textColor="#000000"/>


            <TextView
                android:id="@+id/user_contact_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Contact No. - Diptika  Shukla"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/user_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Location - Diptika  Shukla"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/user_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Age - Diptika  Shukla"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/user_bloodgroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="BloodGroup -Diptika  Shukla"
                android:textColor="#000000"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/qr_code"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="10dp"/>



    </LinearLayout>



    <LinearLayout
        android:id="@+id/day_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:weightSum="2">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal">


            <CheckBox
                android:id="@+id/present_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:checked="false"
                android:buttonTint="@color/colorPrimary"
                android:layout_gravity="center_vertical"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:paddingRight="15dp"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:layout_gravity="center_vertical"
                android:text="Mark Present"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_gravity="right"
            android:weightSum="2"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/edit_user"
                android:layout_width="0dp"
                android:layout_marginTop="12dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mode_edit_black_24dp"/>



            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:paddingRight="15dp"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:layout_gravity="center_vertical"
                android:text="Edit User"/>



        </LinearLayout>





    </LinearLayout>


</LinearLayout>