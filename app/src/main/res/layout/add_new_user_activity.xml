<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/detail_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:id="@+id/no_save_add_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/name_layout"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="13dp"
                    android:textSize="12dp"
                    android:layout_marginTop="7dp"
                    android:text="User Name*"/>
                <EditText
                    android:id="@+id/full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:background="@color/transparent"
                    android:nextFocusDown="@+id/Location"
                    android:textColorHint="#000000"
                    android:hint="User Name"
                    android:paddingBottom="5dp"
                    android:layout_marginTop="2dp"
                    android:inputType="text|textNoSuggestions"
                    android:textColor="#000000"
                    android:textSize="15dp">

                    <requestFocus />
                </EditText>



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#dadada" />

            <TextView
                android:id="@+id/error_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="11dp"
                android:visibility="gone"
                android:text="@string/error_name_text"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:id="@+id/Location_layout"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:minHeight="50dp"
                android:background="#FFFFFF"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="13dp"
                    android:textSize="12dp"
                    android:layout_marginTop="7dp"
                    android:text="Location*"/>
                <EditText
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColorHint="#000000"
                    android:layout_marginLeft="13dp"
                    android:background="@color/transparent"
                    android:nextFocusDown="@+id/Location"
                    android:hint="Location"
                    android:maxLines="4"
                    android:paddingBottom="10dp"
                    android:singleLine="false"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:textColor="#000000"
                    android:textSize="15dp">

                </EditText>



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#dadada" />
            <TextView
                android:id="@+id/error_add_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="11dp"
                android:visibility="gone"
                android:text="@string/error_add_text"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"/>



            <LinearLayout
                android:id="@+id/pincode_layout"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="13dp"
                    android:textSize="12dp"
                    android:layout_marginTop="7dp"
                    android:text="Age*"/>

                <EditText
                    android:id="@+id/age"
                    android:textColorHint="#000000"
                    android:layout_marginTop="2dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:nextFocusDown="@+id/phone_no"

                    android:background="@color/transparent"
                    android:maxLength="3"
                    android:hint="Age"
                    android:inputType="number|textNoSuggestions"
                    android:textColor="#000000"
                    android:textSize="15dp">

                </EditText>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#dadada" />
            <TextView
                android:id="@+id/error_pin_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="11dp"
                android:text="@string/error_pin_text"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:layout_marginTop="5dp"/>










            <LinearLayout
                android:id="@+id/city_layout"
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="13dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12dp"
                    android:layout_marginTop="7dp"
                    android:text="Blood Group"/>

                <EditText
                    android:id="@+id/blood_group"
                    android:textColorHint="#000000"
                    android:layout_marginTop="2dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:nextFocusDown="@+id/phone_no"

                    android:background="@color/transparent"
                    android:maxLength="3"
                    android:hint="Blood Group"
                    android:inputType="text|textNoSuggestions"
                    android:textColor="#000000"
                    android:textSize="15dp">
                    </EditText>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/transparent"
                    android:hint="State"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textSize="17dp">

                    <requestFocus />
                </EditText>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#dadada" />

            <LinearLayout
                android:id="@+id/phone_no_layout"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#dadada"
                    android:layout_marginLeft="13dp"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:text="+91"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="13dp"
                        android:textSize="12dp"
                        android:layout_marginTop="7dp"
                        android:text="Phone Number"/>

                    <EditText
                        android:id="@+id/phone_no"
                        android:textColorHint="#000000"
                        android:layout_marginTop="2dp"
                        android:paddingBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"

                        android:background="@color/transparent"
                        android:maxLength="10"
                        android:hint="Phone Number"
                        android:inputType="number|textNoSuggestions"
                        android:textColor="#000000"
                        android:textSize="15dp">


                    </EditText>


                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#dadada" />
            <TextView
                android:id="@+id/error_phn_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="11dp"
                android:visibility="gone"
                android:text="@string/error_phn_text"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"/>



            <LinearLayout
                android:id="@+id/day_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:weightSum="3">





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="horizontal">


                    <CheckBox
                        android:id="@+id/checkbox_day1"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="3dp"
                        android:checked="true"
                        android:buttonTint="@color/colorPrimary"
                        android:layout_gravity="center_vertical"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="3dp"
                        android:paddingRight="15dp"
                        android:textColor="@android:color/black"
                        android:textSize="14dp"
                        android:layout_gravity="center_vertical"
                        android:text="Day  1"/>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="horizontal">


                    <CheckBox
                        android:id="@+id/checkbox_day2"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="3dp"
                        android:checked="true"
                        android:buttonTint="@color/colorPrimary"
                        android:layout_gravity="center_vertical"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="3dp"
                        android:paddingRight="15dp"
                        android:textColor="@android:color/black"
                        android:textSize="14dp"
                        android:layout_gravity="center_vertical"
                        android:text="Day  2"/>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="horizontal">


                    <CheckBox
                        android:id="@+id/checkbox_day3"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="3dp"
                        android:checked="true"
                        android:buttonTint="@color/colorPrimary"
                        android:layout_gravity="center_vertical"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="3dp"
                        android:paddingRight="15dp"
                        android:textColor="@android:color/black"
                        android:textSize="14dp"
                        android:layout_gravity="center_vertical"
                        android:text="Day  3"/>



                </LinearLayout>




            </LinearLayout>





        </LinearLayout>




    </ScrollView>


    <Button
        android:id="@+id/add_new"
        android:layout_width="match_parent"
        android:layout_height="50dp"
       android:layout_alignParentBottom="true"
        android:background="@android:color/background_dark"
        android:text="SUBMIT"
        android:textColor="#ffffff"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/save_user"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/background_dark"
        android:text="SAVE"
        android:visibility="gone"
        android:textColor="#ffffff"
        android:textSize="20dp"/>
</RelativeLayout>